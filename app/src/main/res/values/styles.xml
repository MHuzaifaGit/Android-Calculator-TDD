<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme: must be an AppCompat/MaterialComponents descendant -->
    <style name="Theme.CalculatorApp" parent="Theme.Material3.Light.NoActionBar" />

    <style name="NumberButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">80dp</item>
    </style>

    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">80dp</item>
    </style>
</resources>
